<% if flash[:notice] %>
<div class="flash">
	<%= flash[:notice] %>
</div>
<% end %>

<h1>Editing Book</h1>

<%= form_for(@book) do |f| %>
  <h4>name</h4>
  <%= f.text_field :title, class:"book_title" %>
  <h4>opinion</h4>
  <%= f.text_area :option, class:"book_body" %>
  <%= f.submit '投稿' %>
<% end %>
<%= link_to "show", book_path(@book), class:"book_#{@book.id}" %>
