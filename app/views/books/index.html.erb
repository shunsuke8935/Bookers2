<% if @book.errors.any? %>
<div class="alert alert-warning">
	<ul>
		<% @book.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="container bg-defalt">
	<div class="row">
		<div class="col-lg-3" style="background-color: white;">
			<h3>User info</h3>
			<table class="table">
				<thead>
					<tr>
						<th>image</th>
						<th><%= attachment_image_tag @user, :image, format: 'jpeg', fallback: "no_image.jpeg", size:"100x100" %>
						</th>
					</tr>
					</tr>
					<tr>
						<th>name</th>
						<th><%= @user.name %></th>
					</tr>
					<tr>
						<th>introduction</th>
						<th><%= @user.introduction %></th>
					</tr>
				</thead>
			</table>
			<%= link_to edit_user_path(current_user.id), class:"edit_user_#{current_user.id}" do %>
			<button type="button" class="btn btn-default"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span></button><% end %>
			<h3>New books</h3>
			<%= form_for(@book) do |f| %>

			<h4>title</h4>
			<%= f.text_field :title, class:"book_title" %>
			<h4>opinion</h4>
			<%= f.text_area :option, class:"book_body" %>
			<%= f.submit '投稿' %>
			<% end %>
		</div>
		<div class="col-lg-9">
	<table class="table">
	<thead>
		<tr>
			<th>image</th>
			<th>title</th>
			<th>opinion</th>
		</tr>
	</thead>

	<tbody>
		<% @books.each do |book| %>
		<tr>
			<th><%= attachment_image_tag book.user, :image, format: 'jpeg', fallback: "no_image.jpeg", size:"100x100" %></th>
			<th><%= link_to book.title, book_path(book.id), class:"book_#{@book.id}" %></th>
			<th><%= book.option %></th>
		</tr>
		<% end %>

	</tbody>
    </table>
        </div>
    </div>
</div>
