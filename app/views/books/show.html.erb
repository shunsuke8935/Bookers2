<% if flash[:notice] %>
<div class="flash">
	<%= flash[:notice] %>
</div>
<% end %>

<div class="container bg-defalt">
	<div class="row">
		<div class="col-lg-3" style="background-color: white;">
			<h3>User info</h3>
			<table class="table">
				<thead>
					<tr>
						<td>image</td>
						<td><%= attachment_image_tag @user, :image, format: 'jpeg', fallback: "no_image.jpeg", size:"100x100" %></td>
						<% if @user.id == current_user.id %>
					</td>
					<% end %>
					</tr>
					<tr>
						<td>name</td>
						<td><%= @user.name %></td>
					</tr>
					<tr>
						<td>introduction</td>
						<td><%= @user.introduction %></td>
					</tr>
				</thead>
			</table>
			<%= link_to edit_user_path(current_user.id), class:"edit_user_#{current_user.id}" do %>
			<button type="button" class="btn btn-default"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span></button><% end %>
			<h3>New books</h3>
			<%= form_for(@books) do |f| %>

			<h4>title</h4>
			<%= f.text_field :title, class:"book_title" %>
			<h4>opinion</h4>
			<%= f.text_area :option, class:"book_body" %>
			<%= f.submit '投稿' %>
			<% end %>
		</div>
		<div class="col-lg-9">
	<table class="table">
		<h3>Book detaile</h3>
	<thead>
	</thead>
	<tbody>
		<tr>
			<td><%= attachment_image_tag @user, :image, format: 'jpeg', fallback: "no_image.jpeg", size:"100x100" %>
			</td>
			<td><%= @book.title %></td>
			<td><%= @book.option %></td>
			<% if @book.user_id == current_user.id %>
			<td><%= link_to "編集", edit_book_path(@book), class:"edit_book_#{@book.id}" %></td>
			<td><%= link_to "削除", destroy_book_path(@book), class:"destroy_book_#{@book.id}", method: :'delete' %></td>
			<% end %>
		</tr>
	</tbody>
    </table>
        </div>
    </div>
</div>