<div class="container bg-defalt">
	<div class="row">
		<div class="col-lg-3" style="background-color: white;">
			<h3>User info</h3>
			<table class="table">
				<thead>
					<tr>
						<th>image</th>
						<th><%= attachment_image_tag @user, :image, format: 'jpeg', fallback: "no_image.jpeg", size:"100x100" %></th>
						<% if @user.id == current_user.id %>
					</tr>
					<% end %>
					<tr>
						<th>name</th>
						<th><%= @user.name %></th>
					</tr>
					<tr>
						<th>introduction</th>
						<th><%= @user.introduction %></th>
					</tr>
				</thead>
			</table>
			<%= link_to edit_user_path(current_user.id), class:"edit_user_#{current_user.id}" do %>
			<button type="button" class="btn btn-default"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span></button><% end %>
			<h3>New books</h3>
			<%= form_for(@book) do |f| %>

			<h4>title</h4>
			<%= f.text_field :title, class:"book_title" %>
			<h4>opinion</h4>
			<%= f.text_area :option, class:"book_body" %>
			<%= f.submit '投稿' %>
			<% end %>
		
		</div>
		<div class="col-lg-9">
	<table class="table">
	<thead>
		<tr>
			<th>image</th>
			<th>name</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
		<tr>
			<th><%= attachment_image_tag user, :image, format: 'jpeg', fallback: "no_image.jpeg", size:"100x100" %></th>
			<th><%= user.name %></th>
			<th><%= link_to "show", user_path(user.id), class:"user_#{user.id}" %></th>
		</tr>
		<% end %>
			</tbody>
    </table>
        </div>
    </div>
</div>
