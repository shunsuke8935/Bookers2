<div class="container bg-defalt">
	<div class="row">
		<div class="col-lg-3" style="background-color: white;">
			<h3>User info</h3>
			<table class="table">
				<thead>
					<tr>
						<td>image</td>
						<td><%= attachment_image_tag @user, :image, format: 'jpeg', fallback: "no_image.jpeg", size:"100x100" %></td>
						<% if @user.id == current_user.id %>
					</tr>
					<% end %>
					<tr>
						<td>name</td>
						<td><%= @user.name %></td>
					</tr>
					<tr>
						<td>introduction</td>
						<td><%= @user.introduction %></td>
					</tr>
				</thead>
			</table>
			<%= link_to edit_user_path(current_user.id), class: "edit_user_#{current_user.id}" do %>
			<button type="button" class="btn btn-default"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span></button><% end %>
			<h3>New books</h3>
			<%= form_for(@book) do |f| %>

			<h4>title</h4>
			<%= f.text_field :title, class: "book_title" %>
			<h4>opinion</h4>
			<%= f.text_area :option, class: "book_body" %>
			<%= f.submit '投稿' %>
			<% end %>
		
		</div>
		<div class="col-lg-9">
	<table class="table">
	<thead>
		<tr>
			<td>image</td>
			<td>name</td>
			<td></td>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
		<tr>
			<td><%= attachment_image_tag user, :image, format: 'jpeg', fallback: "no_image.jpeg", size:"100x100" %></td>
			<td><%= user.name %></td>
			<td><%= link_to "show", user_path(user.id), class: "user_#{user.id}" %></td>
		</tr>
		<% end %>
			</tbody>
    </table>
        </div>
    </div>
</div>
