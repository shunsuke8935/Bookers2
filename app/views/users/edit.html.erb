<% if @user.errors.any? %>
<div class="alert alert-warning">
	<ul>
		<% @user.errors.full_messages.each do |message| %>
		<li><%= message %></li>
		<% end %>
	</ul>
</div>
<% end %>

<h1>User info</h1>

<%= form_for(@user) do |f| %>
 
  <h4>name</h4>
  <%= f.text_field :name, class: "name" %>
 
  <!-- 追加部分 -->
  <h4>画像</h4>
  <%= f.attachment_field :image,class: "user_image" %>

  <%= f.text_area :introduction, class: "introduction" %>
 
  <%= f.submit '投稿' %>
 
<% end %>
